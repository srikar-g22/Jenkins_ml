pipeline {
    agent any
    stages {
        stage ('installing jupyter') {
            steps {
                sh 'pip install jupyter'
            }  
        }
        stage ('creating python script') {
            steps {
                sh 'jupyter nbconvert --to script 'trainingML.ipynb''
            }
        }
        stage ('creating docker image'){
            steps {
                sh "docker build -t python_image:$BUILD_NUMBER"
            }
        }
        stage ('running script inside docker container') {
            steps {
                sh "docker run python_image:$BUILD_NUMBER" 
            }
        }
    }
}